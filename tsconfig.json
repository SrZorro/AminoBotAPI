{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "declaration": true,
        "target": "es2015",
        "preserveConstEnums": true,
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}